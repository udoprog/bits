#!/usr/bin/env ruby

require 'rubygems'

if __FILE__ == $0
    lib = File.expand_path File.join('..', '..', 'lib'), $0

    if File.file? File.join(lib, 'bits.rb')
        $:.insert 0, lib
        bin = File.expand_path File.join('..', 'bin'), lib
        ENV['PATH']="#{bin}:#{ENV['PATH']}"
    end

    require 'bits'
    exit Bits::main(ARGV)
end
